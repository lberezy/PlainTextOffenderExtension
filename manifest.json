{
    "manifest_version": 2,
    "name": "Plaintext Offender",
    "description": "Notifies the user that the current website may handle their password data in plain text.",
    "version": "0.1",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "http://*/", 
        "https://*/"
    ]
}
